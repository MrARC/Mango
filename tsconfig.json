{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "commonjs",
    "sourceMap": false,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "allowJs": true,
    "target": "es2017",
    "lib": [
      "es2017",
      "es7",
      "dom"
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.json"
  ],
  "exclude": [
    "node_modules",
    "./src/**/*.spect.ts"
  ]
}
