{
    "name": "mango",
    "version": "1.0.0",
    "description": "Server template",
    "main": "index.js",
    "scripts": {
        "build": "rimraf dist && tsc --project ./tsconfig.json",
        "start": "pm2 start ./ecosystem.config.js --env production",
        "build-start": "npm run build && npm run start",
        "dev": "nodemon",
        "lint": "tslint -t stylish --fix --project \"./tsconfig.json\"",
        "pretest": "npm run lint",
        "test": "jest",
        "test:watch": "jest --watch"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/MrARC/Mango.git"
    },
    "keywords": [
        "typescript",
        "MySQL",
        "express",
        "node"
    ],
    "author": "Alfonso Reyes",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/MrARC/Mango/issues"
    },
    "homepage": "https://github.com/MrARC/Mango#readme",
    "private": true,
    "dependencies": {
        "bcrypt": "^3.0.0",
        "body-parser": "^1.18.3",
        "class-validator": "^0.9.1",
        "core-js": "^2.5.4",
        "cors": "^2.8.4",
        "dotenv": "^6.0.0",
        "express": "^4.16.3",
        "helmet": "^3.13.0",
        "jsonwebtoken": "^8.3.0",
        "moment": "^2.22.2",
        "morgan": "^1.9.0",
        "multer": "^1.3.1",
        "mysql": "^2.14.1",
        "reflect-metadata": "^0.1.10",
        "routing-controllers": "^0.7.7",
        "typedi": "^0.8.0",
        "typeorm": "0.2.7",
        "winston": "^3.0.0",
        "winston-daily-rotate-file": "3.1.3"
    },
    "devDependencies": {
        "@types/bcrypt": "^2.0.0",
        "@types/body-parser": "^1.17.0",
        "@types/dotenv": "^4.0.3",
        "@types/express": "^4.16.0",
        "@types/jest": "^23.3.1",
        "@types/jsonwebtoken": "^7.2.8",
        "@types/morgan": "^1.7.35",
        "@types/multer": "^1.3.7",
        "@types/node": "^8.10.25",
        "concurrently": "^3.6.1",
        "cross-env": "^5.2.0",
        "jest": "^23.5.0",
        "nodemon": "^1.18.3",
        "pm2": "^3.0.4",
        "rimraf": "^2.6.2",
        "supertest": "^3.1.0",
        "ts-jest": "^23.1.3",
        "ts-node": "3.3.0",
        "tslint": "^5.9.1",
        "typescript": "^2.9.2"
    },
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ]
    }
}
