{
    "name": "mango",
    "version": "1.0.0",
    "description": "Server template",
    "main": "./dist/app.js",
    "scripts": {
        "build": "rimraf dist && tsc --project ./tsconfig.json",
        "start": "pm2 start ./ecosystem.config.js --env production",
        "build-start": "npm run build && npm run start",
        "dev": "nodemon",
        "lint": "tslint -t stylish --fix --project \"./tsconfig.json\"",
        "test": "jest --config=jest.json",
        "test:watch": "jest --config=jest.json --watch",
        "test:coverage": "jest --config=jest.json --coverage --coverageDirectory=coverage",
        "add:module": "plop module"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/MrARC/Mango.git"
    },
    "keywords": [
        "typescript",
        "MySQL",
        "express",
        "node"
    ],
    "author": "Alfonso Reyes",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/MrARC/Mango/issues"
    },
    "homepage": "https://github.com/MrARC/Mango#readme",
    "private": true,
    "dependencies": {
        "bcrypt": "^3.0.3",
        "body-parser": "^1.18.3",
        "class-transformer": "~0.2.0",
        "class-validator": "^0.9.1",
        "core-js": "^2.6.1",
        "cors": "^2.8.5",
        "dotenv": "^6.2.0",
        "express": "^4.16.4",
        "express-http-context": "^1.2.0",
        "fs-extra": "^7.0.1",
        "helmet": "^3.15.0",
        "jsonwebtoken": "^8.4.0",
        "moment": "^2.23.0",
        "morgan": "^1.9.1",
        "multer": "^1.4.1",
        "mysql": "^2.16.0",
        "nconf": "^0.10.0",
        "redis": "^2.8.0",
        "reflect-metadata": "^0.1.12",
        "routing-controllers": "^0.7.7",
        "sharp": "^0.21.1",
        "typedi": "^0.8.0",
        "typeorm": "0.2.9",
        "typeorm-typedi-extensions": "^0.2.1",
        "uuid": "^3.3.2",
        "winston": "^3.1.0",
        "winston-daily-rotate-file": "3.5.1"
    },
    "devDependencies": {
        "@types/bcrypt": "^3.0.0",
        "@types/body-parser": "^1.17.0",
        "@types/dotenv": "^6.1.0",
        "@types/express": "^4.16.0",
        "@types/fs-extra": "^5.0.4",
        "@types/helmet": "0.0.42",
        "@types/jest": "^23.3.9",
        "@types/jsonwebtoken": "^8.3.0",
        "@types/morgan": "^1.7.35",
        "@types/multer": "^1.3.7",
        "@types/nconf": "0.0.37",
        "@types/node": "^10.12.18",
        "@types/redis": "^2.8.10",
        "@types/sharp": "^0.21.0",
        "@types/supertest": "^2.0.7",
        "@types/uuid": "^3.4.4",
        "concurrently": "^4.1.0",
        "cross-env": "^5.2.0",
        "jest": "^23.6.0",
        "nodemon": "^1.18.9",
        "plop": "^2.2.0",
        "pm2": "^3.2.4",
        "rimraf": "^2.6.2",
        "supertest": "^3.3.0",
        "ts-jest": "^23.10.4",
        "ts-node": "7.0.1",
        "tslint": "^5.12.0",
        "typedoc": "^0.13.0",
        "typescript": "^3.2.2"
    },
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ],
        "collectCoverage": false,
        "collectCoverageFrom": [
            "src/**/*.ts"
        ],
        "coverageReporters": [
            "html",
            "json"
        ]
    }
}
