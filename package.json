    "@types/express": "^4.16.1",
    "@types/faker": "^4.1.5",
    "@types/fs-extra": "^5.0.5",
    "@types/helmet": "^0.0.43",
    "@types/inquirer": "6.0.0",
    "@types/jest": "^24.0.11",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/morgan": "^1.7.35",
    "@types/multer": "^1.3.7",
    "@types/nconf": "^0.10.0",
    "@types/node": "^11.12.0",
    "@types/redis": "^2.8.12",
    "@types/sharp": "^0.22.0",
    "@types/supertest": "^2.0.7",
    "@types/uuid": "^3.4.4",
    "commander": "^2.19.0",
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
