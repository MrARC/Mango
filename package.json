{
  "name": "mango",
  "version": "1.0.0",
  "description": "Mango server template",
  "main": "./dist/server.js",
  "scripts": {
    "postinstall": "npm run build",
    "build": "rimraf dist && tsc --project ./tsconfig.json",
    "start": "pm2 start ./ecosystem.config.js --env production",
    "build-start": "npm run build && npm run start",
    "dev": "nodemon",
    "lint": "tslint -t stylish --fix --project ./tsconfig.json",
    "test": "jest --config=jest.json",
    "test:watch": "jest --config=jest.json --watch",
    "test:coverage": "jest --config=jest.json --coverage --coverageDirectory=coverage",
    "add:module": "plop module"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MrARC/Mango.git"
  },
  "keywords": [
    "typescript",
    "MySQL",
    "express",
    "node"
  ],
  "author": "Alfonso Reyes",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MrARC/Mango/issues"
  },
  "homepage": "https://github.com/MrARC/Mango#readme",
  "private": true,
  "dependencies": {
    "bcrypt": "^3.0.5",
    "body-parser": "^1.18.3",
    "class-transformer": "~0.2.0",
    "class-validator": "^0.9.1",
    "core-js": "^3.0.0",
    "cors": "^2.8.5",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "express-http-context": "^1.2.1",
    "fs-extra": "^7.0.1",
    "helmet": "^3.16.0",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.24.0",
    "morgan": "^1.9.1",
    "multer": "^1.4.1",
    "mysql": "^2.16.0",
    "nconf": "^0.10.0",
    "pm2": "^3.4.1",
    "redis": "^2.8.0",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.7.7",
    "sharp": "^0.22.0",
    "typedi": "^0.8.0",
    "typeorm": "^0.2.16",
    "typeorm-typedi-extensions": "^0.2.3",
    "typescript": "^3.3.4000",
    "uuid": "^3.3.2",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^3.8.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
